#! /bin/bash

### BEGIN INIT INFO
# Provides:          <%= @app %>-<%= @daemon %>-<%= @environment %>
# Required-Start:    $local_fs $remote_fs $network $syslog
# Required-Stop:     $local_fs $remote_fs $network $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: starts the daemon <%= @daemon %>
# Description:       starts the daemon <%= @daemon %> for app <%= @app %> at <%= @environment %> environment
### END INIT INFO

NAME="daemon $DAEMON_NAME"
DESC="Daemon $DAEMON_NAME for app $APP"
USER="<%= @user %>"
USER_PATH="<%= @home %>"
APP="<%= @app %>"
APP_PATH="$USER_PATH/$APP"
CD_TO_APP_DIR="cd $APP_PATH"
RBENV_PATH=$USER_PATH/.rbenv
DAEMON_NAME=<%= @daemon %>
DAEMON_OPTS=""
<% if @type == "ruby" %>
EXEC_DAEMON="$RBENV_PATH/shims/bundle exec bin/$DAEMON $DAEMON_OPTS"
<% else %>
EXEC_DAEMON="bin/$DAEMON $DAEMON_OPTS"
<% end %>
PID=$APP_PATH/$APP.pid

PATH="/sbin:/bin:/usr/sbin:/usr/bin"

test -x $DAEMON || exit 0

. /lib/lsb/init-functions

d_start () {
        log_daemon_msg "Starting system $APP Daemon"
        if [ `whoami` = root ]; then
          cd /home/$USER; su - $USER -c "start-stop-daemon --start --background --pidfile $PID --make-pidfile --user $USER --chuid $USER --chdir $APP_PATH --exec $EXEC_DAEMON"
        else
          start-stop-daemon --start --background --pidfile $PID --make-pidfile --user $USER --chuid $USER --chdir $APP_PATH --exec $EXEC_DAEMON
        fi
        log_end_msg $?
}

d_stop () {
        log_daemon_msg "Stopping system $APP Daemon"
        start-stop-daemon --stop --pidfile $PID --retry 10
          log_end_msg $?
}

case "$1" in

        start|stop)
                d_${1}
                ;;

        restart|reload|force-reload)
                        d_stop
                        d_start
                ;;

        force-stop)
               d_stop
                killall -q $DEAMON_NAME || true
                sleep 2
                killall -q -9 $DEAMON_NAME || true
                ;;

        status)
                status_of_proc "$DEAMON_NAME" "$DAEMON" "system-wide $DEAMON_NAME" && exit 0 || exit $?
                ;;
        *)
                echo "Usage: /etc/init.d/$DEAMON_NAME {start|stop|force-stop|restart|reload|force-reload|status}"
                exit 1
                ;;
esac
exit 0
